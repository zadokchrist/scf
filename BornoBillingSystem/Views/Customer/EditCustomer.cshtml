@model List<BillingSystemLogic.Models.Customer>
@{
    ViewBag.Title = "Confirm Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Confirm Customer to Equitable Services</h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Enter Customer Information</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <h6 class="bg-green text-center">@ViewBag.Message</h6>
                    <h6 class="bg-red text-center">@ViewBag.Error</h6>
                    <div class="item form-group">
                        <div class="col-md-11 col-sm-11 offset-md-11">
                            <a href="~/Customer/ViewCustomers" class="btn btn-success">BACK</a>
                        </div>
                    </div>
                    @if (Model != null && Model.Count > 0)
                    {
                <form class="form-horizontal form-label-left" method="post">
                    <div><input type="hidden" value="@Model[0].RecordId" name="recordid" /></div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="vendor-name">
                            Customer Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" value="@Model[0].Name" class="form-control" name="custname" />
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                            Contact<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" value="@Model[0].Contact" class="form-control" name="contact" />
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                            Pipe Type<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" value="@Model[0].PipeType" class="form-control" name="pipetype" />
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                            Pipe Length
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" value="@Model[0].PipeLength" class="form-control" name="pipelength" />
                        </div>
                    </div>
                    @*<div class="item form-group">
            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                Status<span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 ">
                <select name="status" class="form-control" required>
                    <option selected> Please select Status</option>
                    <option value="UNDER SURVEY">UNDER SURVEY</option>
                    <option value="ON HOLD">ON HOLD</option>
                    <option value="CONFIRMED">CONFIRMED</option>
                </select>
            </div>
        </div>*@
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                            Meter No<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" value="@Model[0].MeterNo" class="form-control" name="meterNo" />
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                            Application Id<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" value="@Model[0].ApplicationId" class="form-control" name="appid" />
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button class="btn btn-primary" type="button">Cancel</button>
                            <button class="btn btn-primary" type="reset">Reset</button>
                            <button type="submit" class="btn btn-success">Confirm Customer</button>
                        </div>
                    </div>
                </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

