@{
    ViewBag.Title = "CUSTOMER ACCOUNT STATEMENT";
    Layout = "~/Views/Shared/_LayoutPagineted.cshtml";
}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Customer Statement</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <h6 class="bg-green text-center">@ViewBag.Message</h6>
                        <h6 class="bg-red text-center">@ViewBag.Error</h6>
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post">
                            <div class="item form-group">
                                <label class="col-form-label col-md-1 col-sm-3 label-align" for="vendor-name">
                                    Customer Ref <span class="required">*</span>
                                </label>
                                <div class="col-md-2 col-sm-6 ">
                                    <input type="text" id="vendor-name" required="required" class="form-control" name="custRef">
                                </div>
                                <label class="col-form-label col-md-1 col-sm-3 label-align" for="vendor-name">
                                    From Date <span class="required">*</span>
                                </label>
                                <div class="col-md-2 col-sm-6 ">
                                    <input type="date" id="vendor-name" required="required" class="form-control" name="startdate">
                                </div>
                                <label class="col-form-label col-md-1 col-sm-3 label-align" for="vendor-name">
                                    To Date <span class="required">*</span>
                                </label>
                                <div class="col-md-2 col-sm-6 ">
                                    <input type="date" id="vendor-name" required="required" class="form-control" name="enddate">
                                </div>
                                <div class="col-md-3 col-sm-6 ">
                                    <button type="submit" class="btn btn-success">Get Statement</button>
                                </div>
                            </div>
                        </form>

                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ReceiptNumber</th>
                                    <th>TranType</th>
                                    <th>CustomerAccount</th>
                                    <th>TranAmount</th>
                                    <th>RecordDate</th>
                                    <th>RunningBal</th>
                                    <th>TranNarration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.AccountStatement != null)
                                {
                                    foreach (var accountstatemen in ViewBag.AccountStatement)
                                    {
                                        <tr class="even pointer">
                                            <td class=" ">@accountstatemen.ReceiptNumber</td>
                                            <td class=" ">@accountstatemen.TranType</td>
                                            <td class=" ">@accountstatemen.CustomerAccount</td>
                                            <td class=" ">@accountstatemen.TranAmount</td>
                                            <td class=" ">@accountstatemen.RecordDate</td>
                                            <td class=" ">@accountstatemen.RunningBal</td>
                                            <td class=" ">@accountstatemen.TranNarration</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

