@model NewAssetManagementSystem.Models.CustomerModel
@{
    ViewBag.Title = "Create Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Create Customer</h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Enter Customer Information</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <h6 class="bg-green text-center">@ViewBag.Message</h6>
                    <h6 class="bg-red text-center">@ViewBag.Error</h6>
                    @using (Html.BeginForm("CreateCustomer", "Customer", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-label-left", data_parsley_validate = "true", id = "demo-form2" }))
                    {
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="vendor-name">
                                Customer Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Contact<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.Contact, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="vendor-name">
                                District Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.DropDownListFor(model => model.Customer.District, new SelectList(Model.Districts, "Id", "DistrictName"), "Select a District", new { @class = "form-control", required = "required", id = "district", name = "district" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="vendor-name">
                                Scheme Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.DropDownListFor(model => model.Customer.Scheme, new SelectList(Model.Schemes, "SchemeId", "SchemeName"), "Select a Scheme", new { @class = "form-control", required = "required", id = "scheme", name = "scheme" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="vendor-name">
                                Village Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.DropDownListFor(model => model.Customer.Village, new SelectList(Model.Villages, "VillageId", "VillageName"), "Select a Village", new { @class = "form-control", required = "required", id = "village", name = "village" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                PipeType
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.PipeType, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Pipe Length
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.PipeLength, new { @class = "form-control" })
                            </div>
                        </div>
                        @*<div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Meter No<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.MeterNo, new { @class = "form-control", required = "required" })
                            </div>
                        </div>*@
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Application Id<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.ApplicationId, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Id Type 
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <div class="col-md-6 col-sm-6">
                                    @Html.DropDownListFor(m => m.Customer.IdType, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Please select ID type", Value = "", Disabled = true, Selected = true },
                                        new SelectListItem { Text = "National ID", Value = "national_id" },
                                        new SelectListItem { Text = "Work ID", Value = "work_id" }
                                    }, new { @class = "form-control", required="required"})
                                </div>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Id Number
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.Customer.Id_number, new { @class = "form-control",required="required"})
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                ID 
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.IdLoc, new { @class = "form-control", type = "file" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Wealth Assessment Form 
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.WealthAssessmentform, new { @class = "form-control", type = "file"})
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Recommendation Letter 
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.RecomLetter, new { @class = "form-control", type = "file" ,required="required"})
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="room-name">
                                Repayment Agreement
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.RepaymentAgreement, new { @class = "form-control", type = "file" })
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <button class="btn btn-primary" type="button">Cancel</button>
                                <button class="btn btn-primary" type="reset">Reset</button>
                                <button type="submit" class="btn btn-success">Register Customer</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        // When the District dropdown changes, make an AJAX request to get the associated schemes
        
        $('#district').change(function () {
            
            var districtId = $(this).val();
            if (districtId) {
                $.ajax({
                    url: '/Location/GetSchemesByDistrict',
                    //url: '@Url.Action("~/Location/GetSchemesByDistrict")',
                    type: 'GET',
                    data: { districtId: districtId },
                    success: function (data) {
                        // Update the Scheme dropdown with the retrieved data
                        $('#scheme').html('');
                        
                        $.each(data, function (index, item) {
                            $('#scheme').append($('<option>', {
                                value: item.Value,
                                text: item.Text
                            }));

                        });
                        $('#scheme').prepend('<option value="">--Please select Scheme--</option>');
                       
                    }
                });
            } else {
                // If no district is selected, clear the Scheme and Village dropdowns
                $('#scheme').html('');
                
                $('#village').html('');
               
            }
        });

        // When the Scheme dropdown changes, make an AJAX request to get the associated villages
        $('#scheme').change(function () {
            var schemeId = $(this).val();
            if (schemeId) {
                $.ajax({
                    url: '/Location/GetVillagesByScheme',
                    @*url: '@Url.Action("GetVillagesByScheme")',*@
                    type: 'GET',
                    data: { schemeId: schemeId },
                    success: function (data) {
                        // Update the Village dropdown with the retrieved data
                        $('#village').html('');
                        $.each(data, function (index, item) {
                            $('#village').append($('<option>', {
                                value: item.Value,
                                text: item.Text
                            }));
                        });
                        $('#village').prepend('<option value="">--Please select Village--</option>');
                    }
                });
            } else {
                // If no scheme is selected, clear the Village dropdown
                $('#village').html('');
            }
        });
    });
</script>
