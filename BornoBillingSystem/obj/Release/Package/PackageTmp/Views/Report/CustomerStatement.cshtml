                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <h6 class="bg-green text-center">@ViewBag.Message</h6>
                    <h6 class="bg-red text-center">@ViewBag.Error</h6>
                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post">
                        <div class="item form-group">
                            <label class="col-form-label col-md-1 col-sm-3 label-align" for="vendor-name">
                                CustomerRef <span class="required">*</span>
                            </label>
                            <div class="col-md-2 col-sm-6 ">
                                <input type="text" id="vendor-name" required="required" class="form-control" name="custref">
                            </div>
                            <label class="col-form-label col-md-1 col-sm-3 label-align" for="vendor-name">
                                From Date <span class="required">*</span>
                            </label>
                            <div class="col-md-2 col-sm-6 ">
                                <input type="date" id="vendor-name" required="required" class="form-control" name="fromdate">
                            </div>
                            <div class="col-l-form-label col-md-1 col-sm-3 label-align" for="vendor-name">
                                <label>
                                    To Date <span class="required">*</span>
                                </label>
                            </div>
                            <div class="col-md-3 col-sm-6 ">
                                <input type="date" id="vendor-name" required="required" class="form-control" name="todate">
                            </div>
                            <div class="col-md-3 col-sm-6 ">
                                <button type="submit" class="btn btn-success">Get Statement</button>
                            </div>
                        
                            </div>
                    </form>
                        @if (Model != null && Model.Count > 0)
                        {
                            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Transaction Id</th>
                                        <th>CustomerRef</th>
                                        <th>Scheme Name</th>
                                        <th>Amount</th>
                                        <th>Tran Date</th>
                                        <th>Running Bal</th>
                                        <th>Transaction Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td>@data.CustomerName</td>
                                            <td>@data.TransId</td>
                                        <td>@data.MeterNo</td>
                                            <td>@data.SchemeName</td>
                                        <td>@data.Amount</td>
                                        <td>@data.TranDate</td>
                                        <td>@data.RunningBalance</td>
                                        <td>@data.TranType</td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        }

</div>
            </div>
        </div>
    </div>
</div>
